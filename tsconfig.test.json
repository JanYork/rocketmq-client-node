{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./lib",
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "enable": true
  }
}
