{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"],
  "typeAcquisition": {
    "enable": true
  }
}
